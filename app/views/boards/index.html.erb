<div class="d-flex align-items-center">
  <h1>掲示板一覧</h1>
  <div class="ml-auto boards__linkBox">
    <a class="btn btn-outline-dark" href="/boards/new">新規作成</a>
  </div>
</div>
<table class="table table-hover boards__table">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成者</th>
      <th>作成日時</th>
      <th>更新日時</th>
    </tr>
  </thead>
  <tbody>
    <% @boards.each do |board|%>
      <tr>
        <th><%= board.id %></th>
        <td><%= board.title %></td>
        <td><%= board.name %></td>
        <td><%= board.created_at.strftime('%Y年%m月%d日 %H時%M分') %></td>
        <td><%= board.updated_at.to_s(:datetime_jp) %></td><!-- 同じフォーマットを使い回す場合、confid/initializers/time_formats.rbで定義したこのやり方の方が便利 -->
      </tr>
    <% end %>
  </tbody>
</table>
