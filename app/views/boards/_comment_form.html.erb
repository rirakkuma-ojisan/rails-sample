<div class="p-comment__formBox">
  <p class="p-comment__formTitle">コメント記入</p>
  <% # undefined method comments_path への対処法 http://gaku3601.hatenablog.com/entry/2014/08/30/101125  %>
  <%= form_for @comment, :url => {:action => :create} do |f| %>
    <%= f.hidden_field :board_id %>
    <div class="form-group">
      <%= f.label :name, '名前' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :comment, 'コメント' %>
      <%= f.text_area :comment, class: 'form-control', rows: 4 %>
    </div>
    <%= f.submit '送信', class: 'btn btn-primary' %>
  <% end %>
</div>
